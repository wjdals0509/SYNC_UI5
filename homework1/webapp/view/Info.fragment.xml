<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog id="idDialog"
            title="항공편 정보">
        <buttons>
            <Button text="닫기" press="onDialogClose" />
        </buttons>

        <content>
            <l:VerticalLayout >
                <f:SimpleForm >
                    <f:content>
                        <l:HorizontalLayout >
                            <Label text="항공사" />
                            <Text text="{}" />
                        </l:HorizontalLayout>
                    </f:content>
                </f:SimpleForm>
            </l:VerticalLayout>
        </content>
    </Dialog>
</core:FragmentDefinition>