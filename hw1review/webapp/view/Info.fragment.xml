<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="idDialog" title="항공편 정보">
        <content>
            <f:SimpleForm layout="ResponsiveGridLayout">
                <!-- 신규라인 -->
                <Label text="항공사" />
                <Text text="{Carrid}" />
                 <!-- 신규라인 -->
                <Label text="항공편번호" />
                <Text text="{Connid}" />
                 <!-- 신규라인 -->
                 <Label text="비행시간" />
                 <Text text="{Fltime}" />
                 <!-- 신규라인 -->
                 <Label text="출발시간" />
                 <!-- 데이터 타입이 time인 property를 출력하기 위한 구문 -->
                 <Text text="{
                    path: 'Deptime',
                    type: 'sap.ui.model.odata.type.Time',
                    formatOptions: {
                        pattern: 'hh:mm:ss'
                    }
                }" />
                 <!-- 신규라인 -->
                 <Label text="도착시간" />
                 <Text text="{
                    path: 'Arrtime',
                    type: 'sap.ui.model.odata.type.Time',
                    formatOptions: {
                        pattern: 'hh:mm:ss'
                    }
                }" />
                 <!-- 신규라인 -->
                 <Label text="비행거리" />
                 <ObjectNumber 
                    number="{Distance}"
                    unit="{Distid}" />    
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="닫기" press="onClosePress" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>