<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="idDialog" title="항공편 정보">
        <content>
            <f:SimpleForm layout="ResponsiveGridLayout">
                <!-- 신규라인 -->
                <Label text="항공사" />
                <Text text="{Carrid}" />
                 <!-- 신규라인 -->
                <Label text="항공편번호" />
                <Text text="{Connid}" />
                 <!-- 신규라인 -->
                 <Label text="비행시간" />
                 <Text text="{Fltime}" />
                 <!-- 신규라인 -->
                 <Label text="출발시간" />
                 <Text text="{Deptime}" />
                 <!-- 신규라인 -->
                 <Label text="도착시간" />
                 <Text text="{Arrtime}" />
                 <!-- 신규라인 -->
                 <Label text="비행거리" />
                 <ObjectNumber 
                    number="{
                        parts: [ {path: 'Distance'} , {path: 'Distid'} ],
                        type: 'sap.ui.model.type.unit'
                    }" 
                    unit="{Distid}" />    
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="닫기" press="onClosePress" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>