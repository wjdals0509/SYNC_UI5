<mvc:View controllerName="sync.e21.hw1review.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table 
                id="idTable" 
                items="{/ConnSet}" 
                mode="SingleSelectMaster"
                selectionChange="onSelectionChange"
            >
                <columns>
                    <Column >
                        <Label text="항공사" />   
                    </Column>
                    <Column >
                        <Label text="항공편번호" />   
                    </Column>
                    <Column >
                        <Label text="출발국가" />     
                    </Column>
                    <Column >
                        <Label text="출발도시" />     
                    </Column>
                    <Column >
                        <Label text="도착국가" />  
                    </Column>
                    <Column >
                        <Label text="도착도시" />  
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <!-- 키필드를 표현하기 위한 ObjectIdentifier -->
                            <ObjectIdentifier title="{Carrid}" />
                            <ObjectIdentifier title="{Connid}" />
                            <!-- 키필드를 제외한 나머지 필드를 표현하기 위한 ObjectAttribute -->
                            <!-- Text를 사용해도 무방 -->
                            <ObjectAttribute text="{Countryfr}" />
                            <ObjectAttribute text="{Cityfrom}" />
                            <ObjectAttribute text="{Countryto}" />
                            <ObjectAttribute text="{Cityto}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
